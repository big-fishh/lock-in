{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",

		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,

		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,

		"outDir": "dist",
		"rootDir": "."

	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules", "dist"]
}